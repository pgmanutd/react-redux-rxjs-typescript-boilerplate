{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es6",
      "dom.iterable",
      "scripthost"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "suppressImplicitAnyIndexErrors": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "downlevelIteration": true,
    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "@webui/*": ["src/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "types": [
      "node",
      "mocha"
    ]
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ]
}
